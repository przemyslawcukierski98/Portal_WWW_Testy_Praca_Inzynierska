@page "/student-groups"
@using OnlineTesty_Library.Models
@inject OnlineTesty_Library.Repositories.IStudentGroupsRepositories StudentGroupsService

@attribute [Authorize(Roles = "Lecturer")]

<h3>Wszystkie grupy studenckie</h3>
<br />

<style>
    .list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .group-record {
        border: 1px solid #ddd;
        margin-top: -1px; /* Prevent double borders */
        background-color: white;
        color: black;
        padding: 12px;
    }
</style>

<div>
    <ul class="list">
        @foreach (var group in StudentGroupsService.FindAll())
        {
            <li class="group-record">@group.Name</li>
        }
    </ul>
</div>

